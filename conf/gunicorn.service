[Unit]
Description=gunicorn daemon
Requires=gunicorn.socket
After=network.target

[Service]
PIDFile=/run/gunicorn/pid
User=www-data
Group=www-data
WorkingDirectory=/var/www/rapidpro
ExecStart=/var/www/rapidpro/env/bin/gunicorn --pid /run/gunicorn/pid --workers 5 --max-requests=1000 --access-logfile /var/log/gunicorn/access.log --error-logfile /var/log/gunicorn/error.log temba.wsgi:application
ExecReload=/bin/kill -s HUP $MAINPID
ExecStop=/bin/kill -s TERM $MAINPID
PrivateTmp=true

[Install]
WantedBy=multi-user.target
